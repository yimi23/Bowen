# BOWEN Framework Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==============================================
# ANTHROPIC CLAUDE API CONFIGURATION
# ==============================================
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-actual-key-here

# Optional: Model configuration
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=1000

# ==============================================
# BOWEN FRAMEWORK CONFIGURATION
# ==============================================
# Framework settings
BOWEN_DEBUG=false
BOWEN_LOG_LEVEL=INFO
BOWEN_SESSION_TIMEOUT=3600

# Default personality on startup
BOWEN_DEFAULT_PERSONALITY=captain

# ==============================================
# DOCUMENT ENGINE CONFIGURATION
# ==============================================
# Output directory for generated documents
BOWEN_OUTPUT_DIR=/Users/yimi/Desktop/bowen_outputs

# Document creation settings
DOCUMENT_QUALITY=high
CHART_DPI=300
EXCEL_AUTO_FIT=true

# ==============================================
# COMPUTER TOOLS CONFIGURATION
# ==============================================
# Safety mode for file operations
TAMARA_SAFE_MODE=true

# Allowed directories for file operations
TAMARA_ALLOWED_DIRS=/Users/yimi/Desktop,/Users/yimi/Documents,/tmp

# Command timeout (seconds)
BASH_TIMEOUT=30

# ==============================================
# MEMORY SYSTEM CONFIGURATION
# ==============================================
# Memory limits
MAX_WORKING_MEMORY=10
MAX_EPISODIC_MEMORY=100
MAX_SEMANTIC_MEMORY=500

# Vector database configuration (future)
# VECTOR_DB_URL=http://localhost:6333
# VECTOR_DB_COLLECTION=bowen_memory

# ==============================================
# CLI INTERFACE CONFIGURATION
# ==============================================
# Terminal colors and themes
ENABLE_COLORS=true
CLI_THEME=professional

# Command history
COMMAND_HISTORY_SIZE=1000
SAVE_SESSION_HISTORY=true

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
# Development mode settings
DEV_MODE=false
MOCK_API_RESPONSES=false
ENABLE_DEBUG_LOGGING=false

# Testing configuration
TEST_OUTPUT_DIR=/tmp/bowen_test_outputs
CLEANUP_TEST_FILES=true